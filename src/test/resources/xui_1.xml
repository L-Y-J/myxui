<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans">

    <bean name="layout" class="java.awt.BorderLayout">
        <property name="hgap" value="10" />
        <property name="vgap" value="10" />
    </bean>

    <bean name="layout1" class="java.awt.FlowLayout">
        <property name="hgap" value="30" />
        <property name="vgap" value="20" />
    </bean>

    <bean name="jframe1" class="javax.swing.JFrame">
        <property name="title" value="测试" />
    </bean>

    <bean name="jframe2" class="javax.swing.JFrame">
        <property name="title" value="测试" />
        <property name="location">
            <list>
                <value>200</value>
                <value>200</value>
            </list>
        </property>
        <property name="size">
            <list>
                <value>600</value>
                <value>600</value>
            </list>
        </property>
        <property name="defaultCloseOperation" value="3" />
        <property name="layout" ref="layout1" />
        <property name="JMenuBar" ref="jMenuBar" />
    </bean>

    <bean name="jMenuBar" class="xui.component.XUIJMenuBar">
        <property name="jmenu">
            <map>
                <entry key="1" value-ref="menu1" />
            </map>
        </property>
    </bean>
    
    <bean name="menu1" class="xui.component.XUIJMenu">
        <property name="text" value="文件" />
        <property name="menuItem">
            <map>
                <entry key="1" value-ref="item1" />
            </map>
        </property>
    </bean>

    <bean name="item1" class="javax.swing.JMenuItem">
        <property name="text" value="打开" />
    </bean>
</beans>
