<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans">

    <import resource="classpath*:xui_2.xml" />

    <bean name="layout1" class="java.awt.FlowLayout">
        <property name="hgap" value="30" />
        <property name="vgap" value="20" />
    </bean>

    <bean name="layout2" class="java.awt.BorderLayout">
        <property name="hgap" value="30" />
        <property name="vgap" value="20" />
    </bean>

    <bean name="jframe2" class="xui.component.XUIJFrame">
        <property name="title" value="测试" />
        <property name="location">
            <list>
                <value>200</value>
                <value>200</value>
            </list>
        </property>
        <property name="size">
            <list>
                <value>600</value>
                <value>600</value>
            </list>
        </property>
        <property name="defaultCloseOperation" value="3" />
        <property name="layout" ref="layout2" />
        <property name="component">
            <map>
                <entry key="WEST" value-ref="button1"></entry>
                <entry key="CENTER" value-ref="panel"></entry>
            </map>
        </property>
        <property name="JMenuBar" ref="jMenuBar" />
    </bean>

    <bean name="panel" class="javax.swing.JPanel">
        <property name="layout" ref="layout2" />
    </bean>

    <bean name="button1" class="javax.swing.JButton">
        <property name="text" value="button1" />
    </bean>

    <bean name="button2" class="javax.swing.JButton">
        <property name="text" value="button1" />
    </bean>

    <bean name="jMenuBar" class="xui.component.XUIJMenuBar">
        <property name="jmenu">
            <map>
                <entry key="1" value-ref="menu1" />
            </map>
        </property>
    </bean>

    <bean name="menu1" class="xui.component.XUIJMenu">
        <property name="text" value="文件" />
        <property name="menuItem">
            <map>
                <entry key="1" value-ref="item1" />
            </map>
        </property>
    </bean>

    <bean name="item1" class="javax.swing.JMenuItem">
        <property name="text" value="打开" />
    </bean>
</beans>
